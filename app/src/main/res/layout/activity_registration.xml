<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/rootView"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">


            <EditText
                android:id="@+id/et_full_name"
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="@string/full_name"
                android:textColorHint="@color/colorPrimaryLight"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:textSize="20sp"
                android:selectAllOnFocus="true"
                android:background="#39dcdbdb"
                android:autofillHints="" />

            <Spinner
                android:id="@+id/sp_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/et_ID"
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="@string/ID_hint"
                android:inputType="number"
                android:textColorHint="@color/colorPrimaryLight"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:textSize="20sp"
                android:selectAllOnFocus="true"
                android:background="#39dcdbdb"
                android:autofillHints="" />


            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="@string/_249"
                android:textColorHint="@color/colorPrimaryLight"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:drawablePadding="5dp"
                android:inputType="phone"
                android:textSize="20sp"
                android:selectAllOnFocus="true"
                tools:ignore="RtlHardcoded"
                android:background="#39dcdbdb"
                />



            <Spinner
                android:id="@+id/sp_user_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="@string/password_hint"
                android:textColorHint="@color/colorPrimaryLight"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:drawablePadding="5dp"
                android:textSize="20sp"
                android:selectAllOnFocus="true"
                tools:ignore="RtlHardcoded"
                android:background="#39dcdbdb"
                />

            <EditText
                android:id="@+id/et_pass_confirm"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="@string/confirm_password_hint"
                android:textColorHint="@color/colorPrimaryLight"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:drawablePadding="5dp"
                android:textSize="20sp"
                android:selectAllOnFocus="true"
                tools:ignore="RtlHardcoded"
                android:background="#39dcdbdb"
                />
            <Spinner
                android:id="@+id/sp_security_qu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/et_answer_qu"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="@string/answer_qution"
                android:textColorHint="@color/colorPrimaryLight"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:drawablePadding="5dp"
                android:textSize="20sp"
                android:selectAllOnFocus="true"
                tools:ignore="RtlHardcoded"
                android:background="#39dcdbdb"
                />

            <Button
                android:id="@+id/b_signup"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:background="@drawable/ripple_effect"
                android:textSize="20dp"
                android:text="@string/signup"
                android:textColor="#eceae9"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:onClick="gotoLogin"
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_have_account"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/have_account"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    />

            </LinearLayout>



        </LinearLayout>
    </ScrollView>



</LinearLayout>
