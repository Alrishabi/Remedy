<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mRoot"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="3"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:gravity="bottom"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:padding="15dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/title_id"
                                        android:textSize="20sp"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:id="@+id/id"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textStyle="bold"
                                        android:textSize="20sp"
                                        android:text=""
                                        android:layout_gravity="center"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:padding="15dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/title_name"
                                        android:textStyle="bold"
                                        android:textSize="20sp"

                                        />

                                    <TextView
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:id="@+id/name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="20sp"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:text=""
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:padding="15dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">
                                    <TextView
                                        android:textSize="20sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/title_specialization"
                                        android:textStyle="bold"
                                        />
                                    <TextView
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textSize="20sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:id="@+id/specialization"
                                        android:text=""
                                        android:layout_gravity="center"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:padding="15dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">
                                    <TextView
                                        android:textSize="20sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/title_state"
                                        android:textStyle="bold"
                                        />
                                    <TextView
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textSize="20sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:id="@+id/state"
                                        android:text=""
                                        android:layout_gravity="center"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/ll_price"
                                    android:padding="15dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">
                                    <TextView
                                        android:textSize="20sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/title_price"
                                        android:textStyle="bold"
                                        />
                                    <TextView
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textSize="20sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:id="@+id/tv_price"
                                        android:text=""
                                        android:layout_gravity="center"/>

                                    <TextView
                                        android:layout_weight="2"
                                        android:gravity="center"
                                        android:textSize="20sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:text="@string/sdg"
                                        android:layout_gravity="center"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/ll_appointment"
                                    android:padding="15dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">
                                    <TextView
                                        android:textSize="20sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/title_ptients"
                                        android:textStyle="bold"
                                        />
                                    <TextView
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textSize="20sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:id="@+id/tv_no_appointment"
                                        android:text="0"
                                        android:layout_gravity="center"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lll_appointment"
                                    android:padding="15dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">
                                    <TextView
                                        android:textSize="20sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/title_no_appoint"
                                        android:textStyle="bold"
                                        />
                                    <TextView
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textSize="20sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:id="@+id/tv_no_stand_appointment"
                                        android:text="0"
                                        android:layout_gravity="center"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:padding="8dp"
                                    android:orientation="horizontal"
                                    android:background="@drawable/border_edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:padding="8dp"
                                        android:textSize="20sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/title_phone"
                                        android:textStyle="bold"
                                        />

                                    <TextView
                                        android:padding="8dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textSize="20sp"
                                        android:id="@+id/phone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:padding="8dp"
                                        android:onClick="call"
                                        android:layout_weight="0.5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:srcCompat="@drawable/ic_call_black_24dp"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/liner_rate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="start"
                                        android:padding="8dp"
                                        android:text="@string/title_rate"
                                        android:textSize="20sp"
                                        android:textStyle="bold"

                                        />

                                    <RatingBar
                                        android:id="@+id/ratebare"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:scaleX="0.7"
                                        android:scaleY="0.7" />

                                </LinearLayout>
                                <LinearLayout
                                    android:visibility="gone"
                                    android:padding="8dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/profile_code"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        />

                                    <TextView
                                        android:id="@+id/category"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="20sp"
                                        android:gravity="end"
                                        android:text=""
                                        android:textColor="@color/colorPrimary"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:padding="15dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">
                                    <TextView
                                        android:textSize="20sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/title_address"
                                        android:textStyle="bold"
                                        />
                                    <TextView
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:id="@+id/address"
                                        android:textSize="20sp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textStyle="bold"
                                        android:text=""
                                        android:layout_gravity="center"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/location_liner"
                                    android:onClick="goToMap"
                                    android:padding="15dp"
                                    android:background="@drawable/border_edit_text"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    >

                                    <TextView
                                        android:padding="5dp"
                                        android:id="@+id/looc"
                                        android:onClick="goToMap"
                                        android:textSize="20sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/title_location"
                                        android:textStyle="bold"
                                        />
                                    <TextView
                                        android:gravity="center"
                                        android:layout_weight="1"
                                        android:onClick="goToMap"
                                        android:id="@+id/location"
                                        android:textSize="20sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textStyle="bold"
                                        android:text=""
                                        android:layout_gravity="center"
                                        />
                                    <ImageView
                                        android:layout_weight="0.1"
                                        android:padding="8dp"
                                        android:onClick="goToMap"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:srcCompat="@drawable/ic_location_on_black_24dp"
                                        android:contentDescription="TODO" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="0"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="40dp">
                                <Button
                                    android:layout_margin="5dp"
                                    android:id="@+id/b_call"
                                    android:background="@drawable/ripple_icon"
                                    android:text="@string/call"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <Button
                                    android:visibility="gone"
                                    android:layout_margin="5dp"
                                    android:padding="12dp"
                                    android:id="@+id/btn_patients"
                                    android:background="@drawable/ripple_icon"
                                    android:text="@string/patients_list"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <Button
                                    android:layout_margin="5dp"
                                    android:visibility="gone"
                                    android:padding="12dp"
                                    android:id="@+id/btn_appointment"
                                    android:background="@drawable/ripple_icon"
                                    android:text="@string/appointment"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
